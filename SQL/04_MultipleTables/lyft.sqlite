/*Select 3 distinct tables*/

SELECT * FROM trips;
SELECT * FROM riders;
SELECT * FROM cars;

/*
  Q: What is the primary key of each?
  A: id
*/

/*Execute a cross join between riders and cars*/

SELECT * 
FROM riders
CROSS JOIN cars;

/*Select the columns to join between trips and riders using a left join*/

SELECT *
FROM trips
LEFT JOIN riders
ON trips.rider_id = riders.id;

/*Select the columns to join on and combine the trips and cars tables using an inner join*/

SELECT *
FROM trips
JOIN cars
ON trips.car_id = cars.id;

/*Stack the riders table on top of the new table, riders2*/

SELECT *
FROM riders
UNION 
SELECT *
FROM riders2;

/*Select the average cost for a trip*/

SELECT ROUND(AVG(cost), 2) AS 'tripCost_avg'
FROM trips;

/*Select all of the riders that have used Lyft less than 500 times*/

SELECT *
FROM riders
WHERE total_trips < 500;

/*Select the number of cars that are active*/

SELECT COUNT(*) AS 'cars_active'
FROM cars
WHERE status = 'active';

/*Select the two cars that have the highest trips_completed*/

SELECT *
FROM cars
ORDER BY trips_completed DESC
LIMIT 2;